#!/bin/sh

mount -t proc none /proc
mount -t sysfs none /sys
mdev -s
clear
cat <<'EOF'
.-.-----------.-.
| |-ZPLinux---|#|
| |-v0.3------| |
| |-For-486DX-| |
| |-with-<3---| | (& Nix)
| "-----------' |
|  .-----.-..   |
|  |     | || |||
|  |     | || \/|
"--^-----^-^^---'
Original ASCII art by Edward Farrow (asciiart.eu).
Author: Matteo Pacini <m+github@matteopacini.me>.
Repository: https://github.com/Zi0P4tch0/ZPLinux.
EOF

sleep 3
setsid cttyhack sh
